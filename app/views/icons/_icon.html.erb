<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="thumbnail">
    <div>
      <%= image_tag(icon.image_url, :class => 'listing-img') %>
    </div>
    <div class="caption">
      <h4>By: <%= icon.artist_name %></h4>
      <hr>
      <p class="btn btn-default"><%= link_to 'Show', icon %></p>
      <p class="btn btn-default"><%= link_to 'Edit', edit_icon_path(icon) %></p>
      <p class="btn btn-default"><%= link_to 'Delete', icon, method: :delete, data: { confirm: 'Are you sure?' } %></p>

 
    </div><!-- End of caption class -->
  </div><!-- End of thumbnail -->
</div>
